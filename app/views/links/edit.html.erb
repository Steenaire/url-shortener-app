<div class="container">
  <h1>Edit Link</h1>

    <%= form_for @link do |f| %>
      <div class="form-group">
        <%= f.label :slug %>:
        <%= f.text_field :slug, class: "form-control" %><br />
      </div>

      <div class="form-group">
        <%= f.label :target_url %>:
        <%= f.text_field :target_url, class: "form-control" %><br />
      </div>

      <div class="form-group">
        <%= f.submit %>
      </div>
    <% end %>