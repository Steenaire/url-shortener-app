<h1>Your links</h1>

<table>
  <tr>
    <th>Slug</th>
    <th>Target URL</th>
    <th>Created At</th>
    <th>Delete Link?</th>
  </tr>
  <% @links.each do |link| %>
    <tr>
      <td><a href="/links/<%= link.id %>"><%= link.slug %></a></td>
      <td><%= link.target_url %></td>
      <td><%= link.created_at %></td>
      <td><%= link_to "Delete!", "/links/#{link.id}", method: :delete %></td>
    </tr>
  <% end %>
<table>
<a href="/links/new">Shorten a New URL</a>
<br>
<%= link_to "Log Out", "/logout", method: :delete %>