<h1>Sign Up for URL Shortener!</h1>

<%= form_tag '/links', method: :post do %>

  <div>
    <%= label_tag :target_url %>
    <%= text_field_tag :target_url %>
  </div>
  <div>
    <%= label_tag :slug %>
    <%= text_field_tag :slug %>
  </div>
  <div>
    <%= hidden_field_tag :user_id, current_user.id %>
  </div>
  <%= submit_tag "Shorten URL" %>

<% end %>